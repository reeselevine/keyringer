<% @products.each do |product| %>
    <div style="float: left;"><img src="<%= product.image_path %>"/></div>
    <h4><%= link_to product.name, :action => "view", :id => product %></h4> <h5>Price: $<%= product.price %> USD</h5>
    <p><%= link_to "Add to cart", :action => "add_to_cart", :id => product %></p>
    <p><%= truncate product.description, length: 160 %> <%= link_to 'read more', :action => "view", :id => product %></p>
    <div class="line-separator"></div>
<% end %>